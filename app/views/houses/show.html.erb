<h1><%= @house.name %></h1>

<h3><%= link_to 'Edit House', edit_conference_house_path(@house.conference, @house) %></h3>
<h3><%= link_to 'Add Character', new_conference_house_character_path(@house.conference, @house) %></h3>
<br>

<div class="container">
    <% @characters.each do | character | %>
    <div class="width-50">
        <h2><%= character.name %></h2>
        <a class="width-50" href="<%= conference_house_character_path(character.house.conference, character.house ,character) %>">
            <div><%= image_tag(character.pic_url, width: '400', height: '400') %></div>
        </a>
    </div>
    <% end %>
</div>
